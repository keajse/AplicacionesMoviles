<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#54DCEE"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Locos somos cuando no confiamos en Dios, siendo quien es!"
        android:textColor="@color/magenta"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textStyle="bold"

    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombres"
        android:gravity="center_horizontal"
    />

    <EditText
        android:id="@+id/etnombres"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Ingrese el nombre"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
    />

    <Button
        android:id="@+id/btn_aceptar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#DFF0CD"
    />

</LinearLayout>

<!--Los EditText me permiten capturar datos-->
<!--layout_width para el ancho y acompañado de height es el alto-->
<!--El wrap_content es que se adapta al tamaño del texto-->